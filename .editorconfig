# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.coffee]
indent_size = 2
[*.js]
indent_size = 2
[*.jsx]
indent_size = 2
[*.sass]
indent_size = 2
[*.scss]
indent_size = 2

# Trailing whitespace is significant in markdown files.
[*.md]
trim_trailing_whitespace = false
